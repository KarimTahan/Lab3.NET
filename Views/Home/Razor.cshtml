@{
    ViewData["Title"] = "Razor";
}

<div>
    <strong>Table</strong>
    <br />
</div>
<table style="width:100%" border="1">
    @{
        int num = 1;
        @for (int i = 0; i < 4; i++)
        {
            <tr>
                @for (int j = 0; j < 10; j++)
                {

                    <td>@(num + (10 * i) + j)</td>
                }
            </tr>
        }
    }
</table>

<div>
    <br />
    <strong>99 Bottles of Beer</strong>
</div>
<div>
    <table>
        @for (int i = 99; i > 0; i--)
        {
            if (i % 20 == 0)
            {
                <tr>WOOO!<br /><br /></tr>
            }
            else if (i % 50 == 0)
            {
                <tr>awwww :(<br /><br /></tr>
            }
            else
            {
                <tr>@i Bottles of beer on the wall, @i bottles of beer. You take one down, you pass it around, @(i - 1) <br /><br /></tr>
            }
        }
    </table>
</div>
